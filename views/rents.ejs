<%- include('header') %>

<h4 class="mb-3">Rents</h4>

<%- include('message') %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Rented</th>
            <th>Returned</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% rents.forEach((item, index) => { %>
            <tr>    
                <td><%= (index+1) %>.</td>
                <td><%= item.title %></td>
                <td><%= item.start %></td>
                <td><%= item.end %></td>
                <td class="text-end">
                    <% if(item.back == 0){ %>
                        <a class="btn btn-primary" href="/return/<%= item.id %>/<%= item.rentid %>">Visszahozatal</a>
                      <% } else{ %>  
                        <a>Visszahozva</a>
                     <% } %>
                </td>
            </tr>

        <% }); %>
    </tbody>
</table>

<%- include('footer') %>