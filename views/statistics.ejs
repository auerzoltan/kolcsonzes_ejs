<%- include('header') %>

<h4 class="mb-3">Statistics</h4>

<%- include('message') %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Típus</th>
            <th class="text-end">Kölcsönzés száma</th>
        </tr>
    </thead>
    <tbody>
        <% borrowed.forEach(borrow => { %>
            <tr>    
                <td><%= borrow.type %></td>
                <td class="text-end"><%= borrow.count %></td>
            </tr>

        <% }); %>
    </tbody>
</table>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mű címe</th>
            <th class="text-end">Várhatóan elérhető lesz:</th>
        </tr>
    </thead>
    <tbody>
        <% away.forEach(thing => { %>
            <tr>    
                <td><%= thing.title %>.</td>
                <td class="text-end"><%= thing.when %></td>
                
            </tr>

        <% }); %>
    </tbody>
</table>

<%- include('footer') %>